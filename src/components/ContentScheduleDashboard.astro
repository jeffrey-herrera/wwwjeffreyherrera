---
// Simple content dashboard that fits your design system
import Button from './Button.astro'
import Badge from './Badge.astro'
---

<div class="space-y-8">
  <!-- Dashboard Header -->
  <div class="bg-white rounded-lg border border-stone-200 p-6">
    <div class="flex items-center justify-between mb-6">
      <h2 class="text-xl font-serif">Content Overview</h2>
      <Button variant="primary" size="small">New Content</Button>
    </div>
    
    <div class="grid grid-cols-1 md:grid-cols-4 gap-4">
      <div class="text-center p-4 bg-stone-50 rounded-lg">
        <div class="text-2xl font-bold text-stone-900">12</div>
        <div class="text-sm text-stone-600">Published</div>
      </div>
      <div class="text-center p-4 bg-orange-50 rounded-lg">
        <div class="text-2xl font-bold text-orange-600">3</div>
        <div class="text-sm text-stone-600">Scheduled</div>
      </div>
      <div class="text-center p-4 bg-blue-50 rounded-lg">
        <div class="text-2xl font-bold text-blue-600">5</div>
        <div class="text-sm text-stone-600">Drafts</div>
      </div>
      <div class="text-center p-4 bg-stone-50 rounded-lg">
        <div class="text-2xl font-bold text-stone-900">67</div>
        <div class="text-sm text-stone-600">Total Views</div>
      </div>
    </div>
  </div>

  <!-- Recent Content -->
  <div class="bg-white rounded-lg border border-stone-200 p-6">
    <h3 class="text-lg font-semibold mb-4">Recent Content</h3>
    <div class="space-y-3">
      <div class="flex items-center justify-between p-3 bg-stone-50 rounded-lg">
        <div>
          <div class="font-medium">New Portfolio Project</div>
          <div class="text-sm text-stone-600">Updated 2 hours ago</div>
        </div>
        <Badge variant="success">Published</Badge>
      </div>
      <div class="flex items-center justify-between p-3 bg-stone-50 rounded-lg">
        <div>
          <div class="font-medium">Fall Music Collection</div>
          <div class="text-sm text-stone-600">Scheduled for tomorrow</div>
        </div>
        <Badge variant="warning">Scheduled</Badge>
      </div>
      <div class="flex items-center justify-between p-3 bg-stone-50 rounded-lg">
        <div>
          <div class="font-medium">About Page Update</div>
          <div class="text-sm text-stone-600">Draft saved</div>
        </div>
        <Badge variant="neutral">Draft</Badge>
      </div>
    </div>
  </div>

  <!-- Quick Actions -->
  <div class="bg-white rounded-lg border border-stone-200 p-6">
    <h3 class="text-lg font-semibold mb-4">Quick Actions</h3>
    <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
      <Button variant="secondary" size="medium" class="justify-start">
        <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M10 3a1 1 0 011 1v5h5a1 1 0 110 2h-5v5a1 1 0 11-2 0v-5H4a1 1 0 110-2h5V4a1 1 0 011-1z" clip-rule="evenodd"></path>
        </svg>
        Add Project
      </Button>
      <Button variant="secondary" size="medium" class="justify-start">
        <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
          <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
        </svg>
        Review Drafts
      </Button>
      <Button variant="secondary" size="medium" class="justify-start">
        <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z" clip-rule="evenodd"></path>
        </svg>
        Schedule Content
      </Button>
    </div>
  </div>
</div>