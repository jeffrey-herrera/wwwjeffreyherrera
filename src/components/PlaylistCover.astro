---
import SanityImage from './SanityImage.astro'
import type { SanityImageSource } from '@sanity/image-url/lib/types/types'

interface Props {
  source: SanityImageSource
  alt: string
  class?: string
  priority?: boolean
  quality?: number
}

const { source, alt, class: className, priority, quality } = Astro.props
---

<SanityImage 
  source={source}
  alt={alt}
  variant="thumbnail"
  class={className}
  priority={priority}
  quality={quality}
/> 