---
export const prerender = true;

import Layout from '../layouts/Layout.astro';
import { getAbout } from '../sanity/queries';
import type { About } from '../sanity/types';
import SanityImage from '../components/SanityImage.astro';
import PortableTextComponent from '../components/PortableText.tsx';

const about = await getAbout();
---

<Layout>
  <div class="max-w-4xl mx-auto p-6 bg-stone-50 min-h-screen">
    {about ? (
      <>
        <header class="mb-12 text-center">
          <h1 class="text-4xl font-bold mb-6">{about.title}</h1>
          
          {about.profileImage && (
            <div class="mx-auto mb-8 w-48 h-48">
              <SanityImage 
                source={about.profileImage}
                alt={about.profileImage.alt || 'Profile photo'}
                class="w-full h-full object-cover rounded-full mx-auto"
              />
            </div>
          )}
        </header>

        <section class="mb-12">
          <h2 class="text-2xl font-bold mb-6">About Me</h2>
          <div class="prose prose-stone max-w-none">
            <PortableTextComponent value={about.bio} client:load />
          </div>
        </section>



        {about.contact && (
          <section class="mb-12">
            <h2 class="text-2xl font-bold mb-6">Get In Touch</h2>
            <div class="bg-white rounded-lg p-6 shadow-sm">
              <div class="space-y-4">
                <div>
                  <span class="font-medium">Email: </span>
                  <a href={`mailto:${about.contact.email}`} class="text-orange-600 hover:underline">
                    {about.contact.email}
                  </a>
                </div>
                
                <div class="flex gap-6">
                  {about.contact.instagram && (
                    <a href={about.contact.instagram} target="_blank" rel="noopener noreferrer" class="text-orange-600 hover:underline">
                      Instagram
                    </a>
                  )}
                  {about.contact.linkedin && (
                    <a href={about.contact.linkedin} target="_blank" rel="noopener noreferrer" class="text-orange-600 hover:underline">
                      LinkedIn
                    </a>
                  )}
                </div>
              </div>
            </div>
          </section>
        )}
      </>
    ) : (
      <div class="text-center py-16">
        <h1 class="text-4xl font-bold mb-4">About</h1>
        <p class="text-stone-500 text-lg">About content not available yet.</p>
        <p class="text-stone-400 mt-2">Add an About document in your Sanity Studio to get started!</p>
      </div>
    )}
  </div>
</Layout>
