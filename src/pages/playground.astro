---
import Layout from '../layouts/Layout.astro';
import { getAllProjects } from '../sanity/queries';
import type { Project } from '../sanity/types';

const projects = await getAllProjects();

// Group projects by category
const projectsByCategory = projects.reduce((acc, project) => {
  const category = project.category || 'Other';
  if (!acc[category]) {
    acc[category] = [];
  }
  acc[category].push(project);
  return acc;
}, {} as Record<string, Project[]>);
---

<Layout>
  <div class="max-w-6xl mx-auto p-6">
    <header class="mb-12">
      <h1 class="text-4xl font-bold mb-4">Playground</h1>
      <p class="text-xl text-gray-600">A collection of projects spanning design, development, and creative exploration</p>
    </header>

    {Object.entries(projectsByCategory).map(([category, categoryProjects]) => (
      <section class="mb-16">
        <h2 class="text-3xl font-bold mb-8">{category}</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
          {categoryProjects.map((project: Project) => (
            <article class="bg-white border rounded-lg overflow-hidden hover:shadow-lg transition-shadow">
              <div class="p-6">
                <div class="flex justify-between items-start mb-4">
                  <h3 class="text-xl font-bold">{project.title}</h3>
                  <span class="text-sm text-gray-500">{project.year}</span>
                </div>
                
                <p class="text-gray-600 mb-4 leading-relaxed">{project.description}</p>
                
                <div class="flex flex-wrap gap-2 mb-6">
                  {project.tags.map(tag => (
                    <span class="bg-gray-100 text-gray-700 px-3 py-1 rounded-full text-sm">
                      {tag}
                    </span>
                  ))}
                </div>
                
                <div class="flex justify-between items-center">
                  {project.featured && (
                    <span class="bg-blue-100 text-blue-800 px-3 py-1 rounded text-sm font-medium">
                      Featured
                    </span>
                  )}
                  <a 
                    href={`/playground/${project.slug.current}`} 
                    class="text-blue-600 hover:text-blue-800 font-medium"
                  >
                    View Project â†’
                  </a>
                </div>
              </div>
            </article>
          ))}
        </div>
      </section>
    ))}
  </div>
</Layout>
