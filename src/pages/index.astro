---
export const prerender = true;

import Layout from '../layouts/Layout.astro';
import { getFeaturedProjects, getFeaturedPlaylists } from '../sanity/queries';
import type { Project, Playlist } from '../sanity/types';
import PlaylistCover from '../components/PlaylistCover.astro';
import Link from '../components/Link.astro';
import ArrowLink from '../components/ArrowLink.astro';
import Badge from '../components/Badge.astro';
import Button from '../components/Button.astro';

const featuredProjects = await getFeaturedProjects();
const featuredPlaylists = await getFeaturedPlaylists();
---

<Layout>
  <div class="py-8">

    <!-- Hero Section -->
    <section class="mb-16">
      <h1 class="text-5xl font-semibold mb-4">Jeffrey Herrera</h1>
      <p class="text-xl text-gray-600 mb-8">Designer, Developer & Music Curator</p>
      
      <!-- Navigation Links -->
      <div class="flex flex-wrap gap-6 text-lg">
        <Link href="/about" variant="slide">About</Link>
        <ArrowLink href="/playground">Work</ArrowLink>
        <Link href="/playlists" variant="sweep">Music</Link>
        <Link href="mailto:hello@jeffreyherrera.com" external variant="sweep">Contact</Link>
      </div>
      
      <!-- Design System Link -->
      <div class="mt-8">
        <Link href="/system" variant="sweep" class="text-sm">â†’ Design System</Link>
      </div>

    </section>



    <!-- Featured Projects -->
    <section class="mb-12">
      <h2 class="text-3xl font-semibold mb-6">Featured Work</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        {featuredProjects.map((project: Project) => (
          <div class="border rounded-lg p-6 hover:shadow-lg transition-shadow">
            <h3 class="text-xl font-semibold mb-2">{project.title}</h3>
            <p class="text-gray-600 mb-3">{project.description}</p>
            <div class="flex flex-wrap gap-2 mb-3">
              {project.tags.map(tag => (
                <Badge variant="neutral" size="small">{tag}</Badge>
              ))}
            </div>
            <div class="flex justify-between items-center">
              <div class="flex items-center gap-2">
                <Badge variant="info" size="small">{project.year}</Badge>
                {project.featured && (
                  <Badge variant="primary" size="small">Featured</Badge>
                )}
              </div>
              <ArrowLink href={`/playground/${project.slug.current}`}>
                View Project
              </ArrowLink>
            </div>
          </div>
        ))}
      </div>
      <div>
        <Button href="/playground" variant="primary" size="large">
          View All Projects
        </Button>
      </div>
    </section>

    <!-- Featured Playlists -->
    <section>
      <h2 class="text-3xl font-bold mb-6">Recent Playlists</h2>
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4">
        {featuredPlaylists.slice(0, 6).map((playlist: Playlist) => (
          <div class="border rounded-lg overflow-hidden hover:shadow-lg transition-shadow">
            {playlist.coverArt && (
              <div class="aspect-square bg-gray-200">
                <PlaylistCover 
                  source={playlist.coverArt}
                  alt={playlist.coverArt.alt || playlist.name}
                  class="w-full h-full object-cover"
                />
              </div>
            )}
            <div class="p-4">
              <h3 class="font-semibold mb-2">{playlist.name}</h3>
              <p class="text-sm text-gray-600 mb-3">{playlist.featuredTrack}</p>
              <div class="flex justify-between items-center">
                <div class="flex items-center gap-2">
                  <Badge variant="neutral" size="small">{playlist.month} {playlist.year}</Badge>
                  {playlist.featured && (
                    <Badge variant="success" size="small">Featured</Badge>
                  )}
                </div>
                <Link href={playlist.spotifyUrl} external variant="sweep" class="text-sm">
                  Listen
                </Link>
              </div>
            </div>
          </div>
        ))}
      </div>
      <div>
        <Button href="/playlists" variant="secondary" size="large">
          View All Playlists
        </Button>
      </div>
    </section>
  </div>
</Layout>
