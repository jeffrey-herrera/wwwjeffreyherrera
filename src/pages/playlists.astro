---
import Layout from '../layouts/Layout.astro';
import { getAllPlaylists } from '../sanity/queries';
import type { Playlist } from '../sanity/types';
import PlaylistCover from '../components/PlaylistCover.astro';
import InteractivePlaylistCard from '../components/InteractivePlaylistCard.tsx';

const playlists = await getAllPlaylists();

const playlistsByYear = playlists.reduce((acc, playlist) => {
  const year = playlist.year;
  if (!acc[year]) {
    acc[year] = [];
  }
  acc[year].push(playlist);
  return acc;
}, {} as Record<number, Playlist[]>);
---

<Layout>
  <div class="py-6">
    <header class="mb-12">
      <h1 class="text-4xl font-bold mb-4">Playlists</h1>
      <p class="text-xl text-gray-600">Monthly music curation spanning different moods and moments</p>
    </header>

    {Object.entries(playlistsByYear)
      .sort(([a], [b]) => Number(b) - Number(a))
      .map(([year, yearPlaylists]) => (
        <section class="mb-12">
          <h2 class="text-3xl font-bold mb-6">{year}</h2>
          <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-6 gap-6">
            {yearPlaylists.map((playlist: Playlist) => (
              <InteractivePlaylistCard playlist={playlist} client:load>
                {playlist.coverArt && (
                  <div class="w-full aspect-square bg-gray-200">
                    <PlaylistCover 
                      source={playlist.coverArt}
                      alt={playlist.coverArt.alt || playlist.name}
                      class="w-full h-full object-cover"
                    />
                  </div>
                )}
                
                <div class="p-4">
                  <h3 class="font-bold text-lg mb-2 text-stone-200">{playlist.name}</h3>
                  
                  {playlist.featuredTrack && (
                    <p class="text-sm text-stone-600">Featured:</p>
                    <p class="text-sm text-stone-500 mb-3">{playlist.featuredTrack}</p>
                  )}
                  
                  {playlist.featured && (
                    <div class="flex justify-between items-center text-sm text-gray-500">
                      <span class="bg-yellow-100 text-yellow-800 px-2 py-1 rounded text-xs">Featured</span>
                    </div>
                  )}
                </div>
              </InteractivePlaylistCard>
            ))}
          </div>
        </section>
      ))
    }
  </div>
</Layout>
